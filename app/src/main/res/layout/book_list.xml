<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_height="match_parent">




        <!--Image view for displaying our book image-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTVTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amarante"
                android:padding="4dp"
                android:text="title"
                android:textColor="@color/textColorEarthquakeLocation"
                android:textSize="22sp" />

            <!--text view for displaying book subtitle-->
            <TextView
                android:id="@+id/idTVSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aladin"
                android:padding="4dp"
                android:text="subtitle"
                android:textColor="#646467"
                android:textSize="14sp" />
            <!--Text view for displaying book publisher-->
            <TextView
                android:id="@+id/idTVpublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:fontFamily="cursive"
                android:layout_gravity="center_vertical"
                android:text="Publisher"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="4dp"
                android:paddingTop="14dp"
                android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="15dp"
    >
    <TextView
        android:id="@+id/idTVNoOfPages"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="Number of Pages"
        android:fontFamily="serif"
        android:paddingRight="14dp"
        android:textColor="@color/black"
        android:textSize="10sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:textColor="#706B6B"
        android:textSize="13sp"
        android:text="Pages"/>
</LinearLayout>

            <!--text view for displaying number of pages of book-->

            <!--text view for displaying book publish date-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:background="#AAA4A4"
                   />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/idTVPublishDate"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:fontFamily="monospace"
                        android:paddingLeft="20dp"
                        android:text="Publish Date"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:textColor="#655E5E"
                        android:textSize="13sp"
                        android:paddingLeft="20dp"
                        android:text="Publish Date"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="4dp"
                android:fontFamily="sans-serif"
                android:text="Click to Explore"
                 android:textColor="@color/purple_500"
                android:textSize="13sp" />

        </LinearLayout>


</LinearLayout>